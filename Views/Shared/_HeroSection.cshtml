@* Hero-секция "Все для дому" *@
<section class="hero-section position-relative text-dark">
    <div class="container position-relative z-2 text-center pt-2">
        <h1 class="display-2 fw-semibold mb-5 pb-5">ВСЕ ДЛЯ ДОМУ</h1>

        <div class="d-flex justify-content-start flex-wrap gap-3 mb-5">
